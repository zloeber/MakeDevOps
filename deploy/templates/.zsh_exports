# Makedevops
export MAKEDEVOPS_PATH=$HOME/.local/makedevops

# Bin PATH
export BIN_PATH="${HOME}/.local/bin"

# WSL Vagrant path
export VAGRANT_WSL_WINDOWS_ACCESS_USER_HOME_PATH="${HOME}"

# go
export GOROOT="${HOME}/.go"
export GOPATH="${HOME}/go"

# pyenv configs
export PYENV_ROOT="${HOME}/.pyenv"

# Pulumi (if used)
export PULUMI_ROOT=${HOME}/.pulumi/bin

# Finally your path
export PATH="${PYENV_ROOT}/bin:${GOROOT}/bin:${GOPATH}:${PULUMI_ROOT}:${BIN_PATH}:${PATH}"
